<Window x:Class="FlihtMesseger.Windows.MessagesBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlihtMesseger"
        mc:Ignorable="d"
        Title="Message Box" Height="300" Width="600">
    <Grid>
        <ScrollViewer>
            <Grid>
                <!--TODO: REMOVE THIS-->
                <TextBlock x:Name="main" FontSize="10" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top">
                    <!--Messages.dll not found! (404)-->
                </TextBlock>
            </Grid>
        </ScrollViewer>
        <Rectangle VerticalAlignment="Bottom" Height="10" Margin="0,0,0,35">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB4B4B4" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button BorderBrush="Red" BorderThickness="0" VerticalAlignment="Bottom" Margin="0" Content="Exit Application" Padding="10,5" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Height="35" Background="White"/>
    </Grid>
</Window>
